@model creditPreCheck.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="container pageCenter">
    <div class="row align-items-center">
        <div class="col-md-6 col-sm-12 itemCenterColumns">
            <h2 class="text-info">Check if you are eligible for any of the credit cards that we offer ... </h2>
            <img src="~/images/creditcards-hero.png" height="300" />
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="card shadowCard">
                <h5 class="card-header text-info">YOUR DETAILS</h5>
                <div class="card-body">
                    <div>
                        <div>
                            <form asp-action="Index">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="FirstName" class="control-label text-info"></label>
                                        <input asp-for="FirstName" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="LastName" class="control-label text-info"></label>
                                        <input asp-for="LastName" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DoB" class="control-label text-info"></label>
                                    <input asp-for="DoB" class="form-control" autocomplete="off" />
                                    <span asp-validation-for="DoB" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Income" class="control-label text-info"></label>
                                    @* <input asp-for="Income" class="form-control" autocomplete="off" /> *@
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">£</span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Income" autocomplete="off" />
                                    </div>
                                    <span asp-validation-for="Income" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Submit my Information" class="btn btn-info float-right" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
